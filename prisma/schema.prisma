generator client {
  provider = "prisma-client-js"
  binaryTargets = ["native", "rhel-openssl-1.0.x"]
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id            String    @id @default(uuid())
  name          String
  surname       String
  email         String    @unique
  password      String
  role          Role      @default(USER)
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt
  bookings      Booking[]
  submissionLimits SubmissionLimit[]
  bookingLimits BookingLimit[]
}

enum Role {
  USER
  ADMIN
}

enum CourtStatus {
  PENDING
  APPROVED
  REJECTED
}

model Booking {
  id        String   @id @default(uuid())
  firstName String
  lastName  String
  startTime DateTime
  endTime   DateTime
  courtId   String
  userId    String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  court     TennisCourt @relation(fields: [courtId], references: [id], onDelete: Cascade)
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model TennisCourt {
  id           String    @id @default(uuid())
  name         String
  address      String
  description  String
  imageUrl     String
  latitude     Float?    // Making latitude optional
  longitude    Float?    // Making longitude optional
  features     String[]
  openingHours Json      // This will store the opening hours as JSON
  status       CourtStatus @default(PENDING)
  createdAt    DateTime  @default(now())
  updatedAt    DateTime  @updatedAt
  bookings     Booking[]
  submittedById String?    // ID użytkownika, który zgłosił kort

  @@index([status])
}

model SubmissionLimit {
  id        String   @id @default(uuid())
  userId    String
  date      DateTime @db.Date
  count     Int
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([userId, date])
  @@index([userId, date])
}

model BookingLimit {
  id        String   @id @default(uuid())
  userId    String
  date      DateTime @db.Date
  count     Int      // liczba godzin zarezerwowanych w danym dniu
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([userId, date])
  @@index([userId, date])
}
