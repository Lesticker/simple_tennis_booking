generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id            String    @id @default(uuid())
  name          String
  surname       String
  email         String    @unique
  password      String
  role          Role      @default(USER)
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt
  bookings      Booking[]
}

enum Role {
  USER
  ADMIN
}

model Booking {
  id        String   @id @default(uuid())
  firstName String
  lastName  String
  startTime DateTime
  endTime   DateTime
  courtId   String
  userId    String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  court     TennisCourt @relation(fields: [courtId], references: [id], onDelete: Cascade)
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model TennisCourt {
  id           String    @id @default(uuid())
  name         String
  address      String
  description  String
  imageUrl     String
  latitude     Float
  longitude    Float
  features     String[]
  openingHours Json      // This will store the opening hours as JSON
  createdAt    DateTime  @default(now())
  updatedAt    DateTime  @updatedAt
  bookings     Booking[]
}
